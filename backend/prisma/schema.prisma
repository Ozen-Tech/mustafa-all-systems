// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  PROMOTER
  SUPERVISOR
  ADMIN
}

enum PhotoType {
  FACADE_CHECKIN
  FACADE_CHECKOUT
  OTHER
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  phone     String?  // Celular do promotor (opcional)
  role      UserRole
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  visitsAsPromoter      Visit[]
  photoQuotas           PhotoQuota[]
  routeAssignments      RouteAssignment[]
  industryAssignments   IndustryAssignment[]
  photoIndustries       PhotoIndustry[]
  informationDistributions InformationDistribution[]
  whatsappReports       WhatsAppReport[]
}

model Store {
  id        String   @id @default(uuid())
  name      String
  address   String
  latitude  Float
  longitude Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  visits                Visit[]
  priceResearch         PriceResearch[]
  routeAssignments      RouteAssignment[]
  industryAssignments   IndustryAssignment[]
  photoIndustries       PhotoIndustry[]
  informationDistributions InformationDistribution[]
  storeIndustries       StoreIndustry[]
}

model Visit {
  id               String    @id @default(uuid())
  promoterId       String
  storeId          String
  checkInAt        DateTime
  checkOutAt       DateTime?
  checkInLatitude  Float
  checkInLongitude Float
  checkOutLatitude Float?
  checkOutLongitude Float?
  checkInPhotoUrl  String
  checkOutPhotoUrl String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  // Relations
  promoter       User          @relation(fields: [promoterId], references: [id])
  store          Store         @relation(fields: [storeId], references: [id])
  photos         Photo[]
  priceResearch  PriceResearch[]
  locations      Location[]
  photoIndustries PhotoIndustry[]

  @@index([promoterId])
  @@index([storeId])
  @@index([checkInAt])
}

model Photo {
  id                String    @id @default(uuid())
  visitId           String
  url               String
  type              PhotoType
  latitude          Float?
  longitude         Float?
  industryId        String?   // Opcional, para rastreamento direto
  selectedIndustryId String?  // Indústria selecionada manualmente pelo promotor
  createdAt         DateTime  @default(now())

  // Relations
  visit         Visit          @relation(fields: [visitId], references: [id], onDelete: Cascade)
  photoIndustries PhotoIndustry[]

  @@index([visitId])
  @@index([type])
  @@index([industryId])
  @@index([selectedIndustryId])
}

model PriceResearch {
  id        String   @id @default(uuid())
  visitId   String
  storeId   String
  productName String
  price     Float
  competitorPrices Json // Array of {competitorName: string, price: number}
  createdAt DateTime @default(now())

  // Relations
  visit    Visit    @relation(fields: [visitId], references: [id], onDelete: Cascade)
  store    Store    @relation(fields: [storeId], references: [id])

  @@index([visitId])
  @@index([storeId])
}

model Location {
  id        String   @id @default(uuid())
  visitId   String
  latitude  Float
  longitude Float
  timestamp DateTime @default(now())

  // Relations
  visit Visit @relation(fields: [visitId], references: [id], onDelete: Cascade)

  @@index([visitId])
  @@index([timestamp])
}

model PhotoQuota {
  id            String   @id @default(uuid())
  promoterId    String   @unique
  expectedPhotos Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  promoter User @relation(fields: [promoterId], references: [id], onDelete: Cascade)

  @@index([promoterId])
}

model ExportJob {
  id         String   @id @default(uuid())
  userId     String
  status     String   @default("pending") // pending, processing, completed, failed
  progress   Int      @default(0)
  downloadUrl String?
  format     String   // pptx, pdf, excel, html
  filters    Json     // {startDate, endDate, promoterIds, storeIds}
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([userId])
  @@index([status])
}

model RouteAssignment {
  id            String   @id @default(uuid())
  promoterId    String
  storeId       String
  order         Int      @default(0) // Ordem de visita sugerida
  expectedHours Float?   // Horas esperadas por semana/mês
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  promoter User  @relation(fields: [promoterId], references: [id], onDelete: Cascade)
  store    Store @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@unique([promoterId, storeId])
  @@index([promoterId])
  @@index([storeId])
  @@index([isActive])
}

model Industry {
  id          String   @id @default(uuid())
  name        String
  code        String   @unique // Código único da indústria
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  products            Product[]
  photoIndustries     PhotoIndustry[]
  industryAssignments IndustryAssignment[]
  informationDistributions InformationDistribution[]
  whatsappReports     WhatsAppReport[]
  storeIndustries     StoreIndustry[]

  @@index([code])
  @@index([isActive])
}

model Product {
  id          String   @id @default(uuid())
  name        String
  industryId  String
  code        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  industry Industry @relation(fields: [industryId], references: [id], onDelete: Cascade)

  @@unique([industryId, code])
  @@index([industryId])
}

model IndustryAssignment {
  id         String   @id @default(uuid())
  promoterId String
  industryId String
  storeId    String?  // Opcional, se específico por loja
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  promoter User     @relation(fields: [promoterId], references: [id], onDelete: Cascade)
  industry Industry @relation(fields: [industryId], references: [id], onDelete: Cascade)
  store    Store?   @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@unique([promoterId, industryId, storeId])
  @@index([promoterId])
  @@index([industryId])
  @@index([storeId])
  @@index([isActive])
}

model PhotoIndustry {
  id             String    @id @default(uuid())
  photoId        String
  industryId     String
  promoterId     String
  storeId        String
  visitId        String
  qualityScore   Float?    // Score de qualidade (0-100)
  qualityAnalysis Json?    // JSON com análise detalhada
  hasRupture     Boolean   @default(false)
  analyzedAt     DateTime?
  createdAt      DateTime  @default(now())

  // Relations
  photo              Photo                @relation(fields: [photoId], references: [id], onDelete: Cascade)
  industry            Industry             @relation(fields: [industryId], references: [id], onDelete: Cascade)
  promoter            User                 @relation(fields: [promoterId], references: [id], onDelete: Cascade)
  store               Store                @relation(fields: [storeId], references: [id], onDelete: Cascade)
  visit               Visit                @relation(fields: [visitId], references: [id], onDelete: Cascade)
  photoQualityAnalysis PhotoQualityAnalysis?

  @@unique([photoId, industryId])
  @@index([photoId])
  @@index([industryId])
  @@index([promoterId])
  @@index([storeId])
  @@index([visitId])
  @@index([hasRupture])
  @@index([createdAt])
}

model PhotoQualityAnalysis {
  id              String    @id @default(uuid())
  photoIndustryId String    @unique
  overallScore    Float     // Score geral (0-100)
  technicalScore  Float?    // Score técnico
  contentScore    Float?    // Score de conteúdo
  complianceScore Float?    // Score de conformidade
  ruptureDetected Boolean   @default(false)
  analysisDetails Json      // Detalhes da análise em JSON
  analyzedAt      DateTime  @default(now())
  createdAt       DateTime  @default(now())

  // Relations
  photoIndustry PhotoIndustry @relation(fields: [photoIndustryId], references: [id], onDelete: Cascade)

  @@index([overallScore])
  @@index([ruptureDetected])
  @@index([analyzedAt])
}

model InformationDistribution {
  id            String   @id @default(uuid())
  title         String
  content       String   // Texto ou JSON
  industryId    String?
  storeId       String?
  promoterId    String?
  type          String   // estoque, produto, geral
  sourceData    Json?    // Dados do Excel em JSON
  geminiSummary String?  // Resumo gerado pelo Gemini
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  industry Industry? @relation(fields: [industryId], references: [id], onDelete: Cascade)
  store    Store?    @relation(fields: [storeId], references: [id], onDelete: Cascade)
  promoter User?     @relation(fields: [promoterId], references: [id], onDelete: Cascade)

  @@index([industryId])
  @@index([storeId])
  @@index([promoterId])
  @@index([type])
  @@index([isActive])
}

model WhatsAppReport {
  id            String   @id @default(uuid())
  recipientPhone String
  recipientName  String
  reportType     String   // promoter, industry, general
  promoterId     String?
  industryId     String?
  dateRange      Json     // {startDate, endDate}
  pdfUrl         String?
  status         String   @default("pending") // pending, sent, failed
  sentAt         DateTime?
  createdAt      DateTime @default(now())

  // Relations
  promoter User?     @relation(fields: [promoterId], references: [id], onDelete: Cascade)
  industry Industry?  @relation(fields: [industryId], references: [id], onDelete: Cascade)

  @@index([promoterId])
  @@index([industryId])
  @@index([status])
  @@index([createdAt])
}

model StoreIndustry {
  id         String   @id @default(uuid())
  storeId    String
  industryId String
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  store    Store    @relation(fields: [storeId], references: [id], onDelete: Cascade)
  industry Industry @relation(fields: [industryId], references: [id], onDelete: Cascade)

  @@unique([storeId, industryId])
  @@index([storeId])
  @@index([industryId])
  @@index([isActive])
}

