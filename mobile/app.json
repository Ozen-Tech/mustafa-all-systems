{
  "expo": {
    "name": "Promo Gestão",
    "slug": "promo-gestao-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "dark",
    "icon": "./assets/images/icon-square.png",
    "splash": {
      "image": "./assets/images/logo.png",
      "backgroundColor": "#0D1117",
      "resizeMode": "contain"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "updates": {
      "enabled": true,
      "fallbackToCacheTimeout": 30000
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    },
    "ios": {
      "icon": "./assets/images/icon-square.png",
      "supportsTablet": true,
      "bundleIdentifier": "com.promogestao.mobile"
    },
    "android": {
      "icon": "./assets/images/icon-square.png",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon-square.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.promogestao.mobile",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {},
    "plugins": [
      [
        "expo-image-picker",
        {
          "cameraPermission": "Permitir acesso à câmera para tirar fotos das fachadas das lojas.",
          "photosPermission": "Permitir acesso às fotos para selecionar imagens da galeria."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Permitir acesso à localização para rastreamento de rotas e verificação de check-in/checkout."
        }
      ]
    ],
    "extra": {
      "apiUrl": "https://promo-gestao-backend.onrender.com/api",
      "EXPO_PUBLIC_API_URL": "https://promo-gestao-backend.onrender.com/api",
      "eas": {
        "projectId": "ec7a3510-8d52-4352-bb9d-3362ffacb03f"
      }
    }
  }
}
